<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/widget31"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical"
	android:layout_x="0px" android:layout_y="0px"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<TextView android:id="@+id/lblTitleAbout" android:text="@string/about_title"
		android:gravity="center" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:textSize="20px" android:layout_gravity="center_horizontal"></TextView>
	<TextView android:text="@string/about_title_desc" android:id="@+id/lblTitleAboutDesc"
		android:textStyle="normal" android:typeface="serif" android:textColor="#AFC"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:gravity="center" android:textSize="15sp" android:layout_marginTop="20px"></TextView>
	

<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Close" android:layout_gravity="center" android:layout_margin="20px" android:width="100px" android:id="@+id/btnClose"></Button>

</LinearLayout>
