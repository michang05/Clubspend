<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearTransactionRow"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">
	<TextView android:id="@+id/transaction" android:layout_height="wrap_content"
		android:width="250px" android:layout_gravity="left"
		android:layout_width="fill_parent" android:textSize="14sp"/>

	<TextView android:id="@+id/postingDate" android:layout_width="fill_parent"
		android:layout_height="26dip" android:layout_toRightOf="@+id/transaction"
		android:textSize="12sp"
		android:layout_gravity="right" 
		android:textStyle="bold|italic"/>
		

</LinearLayout>
